<!doctype html>
<html>

<head>
 <meta charset="utf-8" />
 <title>CodeSnips</title>
 <link rel="stylesheet" type="text/css" href="static/main.css" />
 <link rel="stylesheet" type="text/css" href="/static/main.css" />
</head>

<body>
 <div class="nav">
  <a href="/">Home</a> 
 </div>
 <h1></h1>
 <form action="/add" method="POST">
  <fieldset>
  <legend>Add a snippet:</legend>
   <label for="title">Title:</label>
   <input type="text" id="title" name="title" placeholder="Name this snippet" required />
   <label for="body">Body:</label>
   <textarea type="text" id="body" name="body" placeholder="Code goes here" required></textarea>
   <label for="notes">Notes:</label>
   <input type="text" id="notes" name="notes" placeholder="Notes" />
   <label for="language">Language:</label>
   <input type="text" id="language" name="language" placeholder="Language" />
   <label for="tags">Tags:</label>
   <input type="text" id="tags" name="tags" placeholder="Tags" />
   <label for="author">Author:</label>
   <input type="text" id="author" name="author" value="{{user}}" />
   <button type="submit">Add to collection</button>
  </fieldset>
 </form>
</body>

</html>
