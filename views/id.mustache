<!doctype html>
<html>

<head>
 <meta charset="utf-8" />
 <title>Book Collection Manager</title>
 <link rel="stylesheet" type="text/css" href="css/main.css" />
 <link rel="stylesheet" type="text/css" href="/css/main.css" />
</head>

<body>
 <a href="/">Back to your snippets</a>
 {{#code}}
  <div class="book">
   <h2>{{title}}</h2>
   <code>{{body}}</code>
   <h4>{{notes}}</h4>
   <h5>{{language}}</h5>
   <h6>{{tags}}</h6>
  </div>
 {{/code}}
 {{#code}}
  <a href="{{_id}}/edit">Edit this snippet</a>
 {{/code}}
 {{#code}}
  <form action="/{{_id}}" method="POST">
    <button type=submit>Delete this snippet</button>
  </form>
 {{/code}}
</body>

</html>
